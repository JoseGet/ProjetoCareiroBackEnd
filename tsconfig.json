{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",  // Define o baseUrl corretamente para src
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["src/types/*"]  // Corrija para src/types/*, pois o baseUrl Ã© ./src
    }
  },
  "include": ["src/**/*", "src/types"]
}
